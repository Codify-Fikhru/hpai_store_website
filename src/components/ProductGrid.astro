const categories = [
  "Semua Produk",
  "Produk Herbal",
  "Makanan Kesehatan & Minuman",
  "Kosmetik & Perawatan Rumah",
];

const mapCategoryToId = (category: string): string => {
  switch (category) {
    case "Produk Herbal":
      return "herbal";
    case "Makanan Kesehatan & Minuman":
      return "health-food";
    case "Kosmetik & Perawatan Rumah":
      return "cosmetics";
    default:
      return "all";
  }
};
